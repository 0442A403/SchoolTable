<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/lessonsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lessonsTitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/lessonIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lessonsSize"
            android:textColor="@color/lessonsColor"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/lesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lessonsSize"
            android:textColor="@color/lessonsColor"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/lessonsClassroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/lessonsSize"
        android:textColor="@color/classroomColor"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lessonsTitleContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/timeLeftMargin">

        <TextView
            android:id="@+id/lessonStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lessonTimeColor"
            android:textSize="@dimen/lessonTimeSize"
            android:maxLines="1"
            android:layout_marginRight="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lessonTimeColor"
            android:textSize="@dimen/lessonTimeSize"
            android:maxLines="1"
            android:text="@string/dash"/>

        <TextView
            android:id="@+id/lessonEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lessonTimeColor"
            android:textSize="@dimen/lessonTimeSize"
            android:maxLines="1"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>